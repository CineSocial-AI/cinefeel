{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
      }
    }
  },
  "OpenTelemetry": {
    "ServiceName": "CineSocial.Api",
    "ServiceVersion": "1.0.0",
    "Exporters": {
      "OtlpEndpoint": "http://localhost:4317",
      "PrometheusPort": 9464
    },
    "Tracing": {
      "Enabled": true,
      "SamplingRatio": 1.0,
      "AlwaysSampleOnError": true
    },
    "Metrics": {
      "Enabled": true,
      "ExportIntervalMilliseconds": 60000
    },
    "Logging": {
      "Enabled": true,
      "IncludeFormattedMessage": true,
      "IncludeScopes": true
    }
  },
  "HealthChecks": {
    "UI": {
      "PollingIntervalSeconds": 30,
      "EvaluationTimeInSeconds": 30,
      "MinimumSecondsBetweenFailureNotifications": 60
    }
  },
  "Email": {
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "FromEmail": "noreply@cinesocial.com",
    "FromName": "CineSocial",
    "VerificationUrlBase": "http://localhost:5500/verify.html"
  },
  "AllowedHosts": "*"
}
