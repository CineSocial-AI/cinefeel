# CineSocial Environment Configuration
# Copy this file to .env and fill in your values
# This is the ONLY .env file you need!

# ===========================================
# TMDB API Configuration
# ===========================================
# Get your token from: https://www.themoviedb.org/settings/api
TMDB_ACCESS_TOKEN=your_tmdb_bearer_token_here

# ===========================================
# Database Configuration
# ===========================================
DATABASE_HOST=localhost                    # Use 'localhost' for host machine, 'postgres' in Docker
DATABASE_PORT=5432
DATABASE_NAME=CINE
DATABASE_USER=cinesocial
DATABASE_PASSWORD=your_secure_password_here
DATABASE_SSL_MODE=Disable

# ===========================================
# JWT Configuration
# ===========================================
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long
JWT_ISSUER=CineSocial
JWT_AUDIENCE=CineSocialUsers
JWT_EXPIRE_MINUTES=60

# ===========================================
# Observability (Optional - Only if using monitoring stack)
# ===========================================
# Uncomment these if using docker-compose.monitoring.yml

# ELASTICSEARCH_URL=http://localhost:9200
# JAEGER_OTLP_ENDPOINT=http://localhost:4317
# ELASTIC_APM_SERVER_URL=http://localhost:8200
# ELASTIC_APM_SERVICE_NAME=CineSocial.Api
# ELASTIC_APM_ENVIRONMENT=Development
# ELASTIC_APM_TRANSACTION_SAMPLE_RATE=1.0
